<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvsec"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="40sp"
        android:textAlignment="viewEnd"
        android:padding="15dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/tvmain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:padding="15dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2"
        tools:ignore="RtlCompat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_500"
            android:orientation="vertical"
            android:weightSum="6">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/bsin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="sin"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">

                    </Button>

                    <Button
                        android:id="@+id/blog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="log"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">

                    </Button>

                    <Button
                        android:id="@+id/bln"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ln"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bl"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="("
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/br"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text=")"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/bcos"
                        android:layout_width="match_parent"
                        android:layout_height ="match_parent"
                        android:layout_weight="1"
                        android:text="cos"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bac"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="AC"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="C"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bx"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1/x"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="/"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/btan"
                        android:layout_width="match_parent"
                        android:layout_height ="match_parent"
                        android:layout_weight="1"
                        android:text="tan"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/b7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="7"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/b8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="8"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/b9"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="9"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="*"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/bxf"
                        android:layout_width="match_parent"
                        android:layout_height ="match_parent"
                        android:layout_weight="1"
                        android:text="X!"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/b4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="4"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/b5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="5"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/b6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="6"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/broot"
                        android:layout_width="match_parent"
                        android:layout_height ="match_parent"
                        android:layout_weight="1"
                        android:text="√"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/b1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/b2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="2"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/b3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="3"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/ba"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="+"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/bxpow"
                        android:layout_width="match_parent"
                        android:layout_height ="match_parent"
                        android:layout_weight="1"
                        android:text="x²"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="n"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bz"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="0"
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/bdot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="."
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>

                    <Button
                        android:id="@+id/be"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="="
                        android:textAllCaps="false"
                        android:textColor="#ffa600"
                        android:textSize="20sp">
                    </Button>



                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>